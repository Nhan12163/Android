<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:hint="Enter Course Name"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginHorizontal="15dp">
    </EditText>

    <EditText
        android:id="@+id/course_decription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/course_name"
        android:layout_marginTop="30dp"
        android:hint="Enter Course Decription"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginHorizontal="15dp">
    </EditText>

    <EditText
        android:id="@+id/course_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/course_decription"
        android:layout_marginTop="30dp"
        android:hint="Enter Course Duration"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginHorizontal="15dp">
    </EditText>

    <EditText
        android:id="@+id/course_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/course_duration"
        android:layout_marginTop="30dp"
        android:hint="Enter Course Track"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginHorizontal="15dp">
    </EditText>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/course_track"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:text="ADD Course"
        android:textAllCaps="false"
        android:backgroundTint="@color/teal_700"
        >
    </Button>

    <Button
        android:id="@+id/btnRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:textAllCaps="false"
        android:text="Read Course"
        android:backgroundTint="@color/teal_700"
        >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>